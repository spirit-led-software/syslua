# Git configuration managed by sys.lua
[user]
    name = Your Name
    email = you@example.com

[core]
    editor = nvim
    autocrlf = input
    whitespace = fix

[init]
    defaultBranch = main

[pull]
    rebase = true

[push]
    default = current
    autoSetupRemote = true

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    lg = log --oneline --graph --decorate
    unstage = reset HEAD --
    last = log -1 HEAD

[color]
    ui = auto
